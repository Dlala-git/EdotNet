@model IEnumerable<Copie0Web.Models.Cursus>


@{
    //ViewBag.Title = "AjoutCursus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Choix des Cursus</h2>


<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Titre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateDebut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateFin)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Image)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateDebut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateFin)
            </td>
            <td>

                <h6>
                    @Html.DisplayFor(modelItem => item.Titre)
                </h6>
                <span>
                    <img src="@Url.Content(@item.Image)" alt="@item.Titre" class="img-fluid" width="60px" />
                </span>
            </td>
            <td>
                <button type="button" class="btn btn-info">

                    @Html.ActionLink("Supprimer", "SupprimerCursus", new { id = item.Id })
                </button>

                <button type="button" class="btn btn-info">
                    @Html.ActionLink("Details", "ListeModulesParcoursSessions", new { id = item.Id })
                </button>
                <a href="/Cursus/ListeParcours/@item.IdSession" class="btn btn-info">Retour</a>

             
            </td>
        </tr>
    }

</table>
<hr />
@{
    if (Request.IsAuthenticated)
    {
        <a href="~/Utilisateurs/Candidature/" class="btn btn-info">

            Postuler  à nouveau
        </a>
    }
    else
    {
        <a href="~/Account/Register/" class="btn btn-info">
            Postuler
        </a>
    }
}